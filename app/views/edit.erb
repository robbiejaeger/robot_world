<form action="/robots/<%= @robot.id %>" method="post">
  <p>Edit the Robot:</p>
  <input type="hidden" name="_method" value="PUT">

  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="robot[name]" class="form-control" id="name" value="<%= @robot.name %>">
  </div>

  <div class="form-group">
    <label for="city">City:</label>
    <input type="text" name="robot[city]" class="form-control" id="city" value="<%= @robot.city %>">
  </div>

  <div class="form-group">
    <label for="state">State:</label>
    <input type="text" name="robot[state]" class="form-control" id="state" value="<%= @robot.state %>">
  </div>

  <div class="form-group">
    <label for="birthdate">Birthdate:</label>
    <input type="date" name="robot[birthdate]" class="form-control" id="birthdate" value="<%= @robot.birthdate.strftime("%Y-%m-%d") %>">
  </div>

  <div class="form-group">
    <label for="date_hired">Date Hired:</label>
    <input type="date" name="robot[date_hired]" class="form-control" id="date_hired" value="<%= @robot.date_hired.strftime("%Y-%m-%d") %>">
  </div>

  <div class="form-group">
    <label for="departmnt">Department:</label>
    <input type="text" name="robot[department]" class="form-control" id="department" value="<%= @robot.department %>">
  </div>

  <input type="submit">
</form>
